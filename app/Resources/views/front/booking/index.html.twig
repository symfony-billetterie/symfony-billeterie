{% extends 'admin/datatable_layout.html.twig' %}

{% block content %}
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">{{ 'front.booking.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <a href="{{ path('front_booking_add') }}" class="btn btn-info add-btn">
                {{ 'common.button.add'|trans }}
            </a>
            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th>{{ 'common.data_table.id'|trans }}</th>
                    <th>{{ 'front.booking.title'|trans }}</th>
                    <th>{{ 'front.booking.e' }}</th>
                    <th>{{ 'common.data_table.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td>{{ booking.event.name }}</td>
                        <td class="column-actions">
                            <div class="btn-group" role="group" aria-label="...">
                                <a href="{{ path('front_booking_edit', {'slug':booking.slug}) }}"
                                   class="btn btn-info" title="{{ 'common.button.edit'|trans }}">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ path('front_booking_delete', {'slug':booking.slug}) }}"
                                   class="btn btn-danger"
                                   onclick="return confirm('{{ 'front.booking.delete_confirm'|trans }}')"
                                   title="{{ 'common.button.delete'|trans }}">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
