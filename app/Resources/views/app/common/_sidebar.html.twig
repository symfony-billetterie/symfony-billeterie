<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'app.title'|trans }}</a>
            <div class="pull-right block-nav-brand">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </div>
        </div>
        <div class="block-nav">
            {{ knp_menu_render('AppBundle:AppBuilder:mainMenu', {'template': 'app/menu/main_menu.html.twig',
                'currentClass': 'active'}) }}
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        {% if app.user %}
                            {{ app.user.lastName }} {{ app.user.firstName }}
                        {% else %}
                            {{ 'app.user.login.title'|trans }}
                        {% endif %}
                        <span class="caret"></span>
                    </a>
                    {% if app.user %}
                        <ul class="dropdown-menu">
                            {% if is_granted('ROLE_OBSERVATORY') %}
                                <li>
                                    <a href="{{ path('admin_homepage') }}">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                        {{ 'admin.sidebar.administration'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="fa fa-power-off" aria-hidden="true"></i>
                                    {{ 'common.menu.logout'|trans }}
                                </a>
                            </li>
                        </ul>
                    {% else %}
                        <div class="dropdown-menu">
                            {{ render(controller('AppBundle:Auth:login')) }}
                        </div>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
</nav>
