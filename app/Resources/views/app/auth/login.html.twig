<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user"></i>
            </span>
            <input class="form-control input-sm" type="text" id="username" name="_username" value="{{ last_username }}"
                   required="required" placeholder="{{ 'app.user.login.username'|trans }}"/>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-lock"></i>
            </span>
            <input class="form-control input-sm" type="password" id="password" name="_password" required="required"
                   placeholder="{{ 'app.user.login.password'|trans }}"/>
        </div>
    </div>
    <div class="form-group text-center">
        <button type="submit" id="_submit" name="_submit" class="btn btn-sm">
            {{ 'common.button.connection'|trans }}
        </button>
    </div>
    <div class="row row-reset">
        <div class="text-center">
            <a href="#">
                {{ 'app.user.login.forgotten_password'|trans }}
            </a>
        </div>
    </div>
</form>
